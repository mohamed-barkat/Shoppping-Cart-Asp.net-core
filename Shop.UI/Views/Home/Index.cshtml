@using Shop.UI.ViewModel.Cart
@using Shop.UI.ViewModel.Home

@model CartItemsVm
@{
    ViewData["Title"] = "Home Page";
}

<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var item in @Model.cartItems)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Sale badge-->
                    <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div>
                        <!-- Product image-->
                    <img class="card-img-top " src="~/ProductsImages/@item.ImageUrl" />
                        <!-- Product details-->
                    <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                            <h5 class="fw-bolder">@item.Name</h5>
                                <!-- Product reviews-->
                            <div class="d-flex justify-content-center small text-warning mb-2">
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                </div>
                                <!-- Product price-->
                            <span class="text-muted text-decoration-line-through">$@item.Price</span>
                                @item.Price
                            </div>
                        </div>
                        <!-- Product actions-->
                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent" style="position:relative">

                            <div class="text-center"><button onclick="AddToCart(@item.ProductId)" class="AddtoCart btn btn-outline-dark mt-auto">Add to cart</button></div>


                            <div class="Qunt text-center"> <input class="form-control " type="number" asp-for="@item.Quantity" name="quantity" id="@item.ProductId.ToString()quantity" /></div>


                        </div>
                    </div>

                </div>
            }




        </div>
    </div>
</section>


@section Scripts{

<script src="~/js/Cart/AddToCart.js"></script>
        }