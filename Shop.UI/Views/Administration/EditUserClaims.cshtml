@using Shop.UI.ViewModel.Claims
@model UserClaimsViewModel
@{

        var userId = ViewBag.userId;
    ViewData["Title"] = "EditUserClaims";
}
<div class="row m-3">
    <div class="col-md-12">
           <form method="post" >
        <div class=card>
            <div class="card-header">
               <h5 class="card-header-pills">Add or Remove Claims from this User</h5>
            </div>
             <div class="card-body">
              
                    
                   @for(int i=0; i<Model.Claims.Count; i++)
                   {
                    <div class="form-check">
                      <input asp-for="userId" type="hidden" >
                       <input asp-for="@Model.Claims[i].ClaimType" type="hidden" >
                       <input class="form-check-input"  asp-for="@Model.Claims[i].IsSelected" type="checkbox" >
                      <label class="form-check-label"  asp-for="@Model.Claims[i].IsSelected">
                        @Model.Claims[i].ClaimType
                          </label>
                         </div>
                     }
                 </div>
              <div class=card-footer>
               <input value="Update" type="submit"  class="btn btn-primary"  />
              <a asp-action="EditUser" asp-route-userId="@userId"  class="btn btn-outline-primary" >Back To List</a>
              </div>
                 </div>
               </form>
               </div>
        </div>
         
